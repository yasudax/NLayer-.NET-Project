@model EntityLayer.Concrete.Testimonial


@{
    ViewData["Title"] = "EditTestimonial";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

@using (Html.BeginForm("EditTestimonial", "Testimonial", FormMethod.Post))
{
<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <p class="card-description"> Mesaj Detay ve Güncelleme Sayfası </p>
            <form class="forms-sample">
                <div class="form-group">
                    <label>ID</label>
                    @Html.TextBoxFor(x => x.TestimonialID , new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>Referans Adı</label>
                    @Html.TextBoxFor(x => x.ClientName, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>Şirket</label>
                    @Html.TextBoxFor(x => x.Company, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>Unvan</label>
                    @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>Görsel Yolu</label>
                    @Html.TextBoxFor(x => x.ImageUrl, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>Yorum</label>
                    @Html.TextAreaFor(x => x.Comment, 6, 3, new { @class = "form-control" })
                </div>
                    <button type="submit" class="btn btn-primary mr-2">Kaydet</button>
                    <a asp-action="Index" asp-controller="Testimonial" class="btn btn-dark">İptal</a>
            </form>
        </div>
    </div>
</div>
}

